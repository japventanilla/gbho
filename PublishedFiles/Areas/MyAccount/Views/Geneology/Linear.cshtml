@model List<MemberViewModel>
@{
    ViewBag.Title = "My Geneology";
    Layout = "~/Areas/MyAccount/Views/Shared/_MyAccountLayout.cshtml";
}


<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Linear View</strong>
                    </div>
                    <div class="card-body">
                        <table id="myList" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Level</th>
                                    <th>Distributor</th>
                                    <th>Placement</th>
                                    <th>Position</th>
                                    <th>Sponsor</th>
                                    <th>Date Joined</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (MemberViewModel item in Model)
                                   {
                                       <tr>
                                           <td>@item.Level</td>
                                           <td>@item.FullName</td>
                                           <td>@item.Placement</td>
                                           <td>@item.HierarchyCode</td>
                                           <td>@item.Sponsor</td>
                                           <td>@item.DateJoinedString</td>
                                           <td>@item.MemberType</td>
                                       </tr>
                                   }
                                } 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->


@section AdditionalScript{

    @Scripts.Render("~/bundles/myaccount/data-table/js")

    <script type="text/javascript">
        $(document).ready(function () {
            //$('#myList').DataTable();
        });
    </script>

}
