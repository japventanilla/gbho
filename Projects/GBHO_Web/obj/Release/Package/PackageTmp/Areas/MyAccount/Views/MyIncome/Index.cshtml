@model IncomeSummaryViewModel
@{
    ViewBag.Title = "My Income";
    Layout = "~/Areas/MyAccount/Views/Shared/_MyAccountLayout.cshtml";
}


<div class="col-lg-12">

    <div class="card">
        <div class="card-header">
            <strong>Income</strong> Summary
            <div class="pull-right">
                @Html.DropDownList("filter", ViewBag.Filters as List<SelectListItem>, new { @class="form-control", @value=ViewBag.SelDate})
            </div>
        </div>
        <div class="card-body card-block">

            <div class="row form-group">

                <div class="col col-md-4"><label class=" form-control-label">Date</label></div>
                <div class="col-12 col-md-7"><p class="form-control-static text-right">@Model.IncomeDateString</p></div>

                <div class="col col-md-4"><label class=" form-control-label">Direct Referrals</label></div>
                <div class="col-12 col-md-7"><p class="form-control-static text-right">@Model.Referrals</p></div>

                <div class="col col-md-4"><label class=" form-control-label">Pairing Bonus</label></div>
                <div class="col-12 col-md-7"><p class="form-control-static text-right">@Model.PairingBonus</p></div>

                <div class="col col-md-4"><label class=" form-control-label">Group Bonus</label></div>
                <div class="col-12 col-md-7"><p class="form-control-static text-right">@Model.GroupBonus</p></div>

                <div class="col col-md-12"><hr></div>

                <div class="col col-md-4"><label class=" form-control-label">Gross Income</label></div>
                <div class="col-12 col-md-7"><p class="form-control-static text-right">@Model.GrossIncome</p></div>

                <div class="col col-md-4"><label class=" form-control-label">Less @Model.WTax.ToString()% Withholding Tax</label></div>
                <div class="col-12 col-md-7"><p class="form-control-static text-right">@Model.LessWTax</p></div>

                <div class="col col-md-4"><label class=" form-control-label">Net Income</label></div>
                <div class="col-12 col-md-7"><p class="form-control-static text-right">@Model.NetIncome</p></div>

            </div>
        </div>
    </div>

</div>

@section AdditionalScript{

    @Scripts.Render("~/bundles/myaccount/data-table/js")

    <script type="text/javascript">
        $(document).ready(function () {

            $("#filter").change(function () {
                var q = $(this).val();
                $(location).attr('href', '/MyAccount/MyIncome/Index?d=' + q)
            });
        });
    </script>

}
