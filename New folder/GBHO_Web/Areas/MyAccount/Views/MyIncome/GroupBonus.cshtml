@model List<GroupBonusViewModel>
@{
    ViewBag.Title = "My Income";
    Layout = "~/Areas/MyAccount/Views/Shared/_MyAccountLayout.cshtml";
}


<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Group </strong>Bonus
                    </div>
                    <div class="card-body">
                        <table id="myList" class="table table-striped table-bordered">                              
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Pts</th>
                                    <th>1st</th>
                                    <th>2nd</th>
                                    <th>3rd</th>
                                    <th>4th</th>
                                    <th>5th</th>
                                    <th>6th</th>
                                    <th>7th</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count > 0)
                                {
                                    foreach (GroupBonusViewModel item in Model)
                                    {
                                        <tr>
                                            <td>@item.DateBonusString</td>
                                            <td>@item.Pts</td>
                                            <td>@item.P1</td>
                                            <td>@item.P2</td>
                                            <td>@item.P3</td>
                                            <td>@item.P4</td>
                                            <td>@item.P5</td>
                                            <td>@item.P6</td>
                                            <td>@item.P7</td>
                                            <td>@item.Total</td>
                                       </tr>
                                    }
                                }                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->


@section AdditionalScript{

    @Scripts.Render("~/bundles/myaccount/data-table/js")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myList').DataTable();
        });
    </script>

}
