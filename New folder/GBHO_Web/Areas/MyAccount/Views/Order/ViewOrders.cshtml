@model List<OrderViewModel>
@{
    ViewBag.Title = "Order";
    Layout = "~/Areas/MyAccount/Views/Shared/_MyAccountLayout.cshtml";
}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">View Orders</strong>
                </div>
                <div class="card-body">
                    <table id="myList" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Orders No</th>
                                <th>Amount</th>
                                <th>Points</th>
                                <th>Status</th>
                                <th>Order Date</th>
                                <th>Order By</th>   
                                <th>Processed Date</th>
                                <th>Processed By</th>                   
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (OrderViewModel item in Model)
                                {
                                   <tr>
                                       <td><a href="@Url.Content("~/MyAccount/Order/OrderDetails?id=" + item.OrderId)">@item.OrderIdString</a></td>                                       
                                       <td class="text-right">@item.AmountString</td>
                                       <td class="text-right">@item.Points</td>
                                       <td>@item.StatusString</td>
                                       <td>@item.OrderDate</td>
                                       <td>@item.OrderBy</td>
                                       <td>@item.ProcessedDate</td>
                                       <td>@item.ProcessedBy</td>
                                   </tr>
                                }
                            }                
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        </div>
    </div>
</div>

@section AdditionalScript{

    @Scripts.Render("~/bundles/myaccount/data-table/js")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myList').DataTable();
        });
    </script>

}
