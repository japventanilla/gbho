@model List<OrderViewModel>
@{
    ViewBag.Title = "Order";
    Layout = "~/Areas/MyAccount/Views/Shared/_MyAccountLayout.cshtml";
}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">For Receiving</strong>
                    </div>
                    <div class="card-body">
                        <table id="myList" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Orders No</th>
                                    <th>Order By</th>
                                    <th>Order Date</th>
                                    <th>Amount</th>
                                    <th>Points</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (OrderViewModel item in Model)
                                    {
                                       <tr>
                                           <td><a href="@Url.Content("~/MyAccount/Order/ForReceivingDetails?id=" + item.OrderId)">@item.OrderIdString</a></td>
                                           <td>@item.OrderBy</td>
                                           <td>@item.OrderDate</td>
                                           <td class="text-right">@item.AmountString</td>
                                           <td class="text-right">@item.Points</td>
                                       </tr>
                                    }
                                } 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

@section AdditionalScript{

    @Scripts.Render("~/bundles/myaccount/data-table/js")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myList').DataTable();
        });
    </script>

}